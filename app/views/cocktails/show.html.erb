<h1 class="text-center"><%= @cocktail.name %></h1>

  <div class="container">
    <ul>
        <% @cocktail.doses.each do |dose| %>
      <li>
          <%= dose.description %> - <%= dose.ingredient.name %>
      </li>
      <% end %>
    </ul>
  </div>


<%= link_to "add a dose!", new_cocktail_dose_path(@cocktail) %>
